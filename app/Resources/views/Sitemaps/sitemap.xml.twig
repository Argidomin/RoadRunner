<?xml version="1.0"?>

<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {% for url in seccion %}
        <url>
            {% if url.seccionPadre != null and url.estado == true  %}
                <loc>{{ url('sitio',{'ruta': url.seccionPadre.ruta, 'sub':url.ruta}) }}</loc>
                <xhtml:link
                        rel="canonical"
                        hreflang="es"
                        href={{ seccion.urlAlternate }}
                        />
            {% else %}
                <loc>{{ url('sitio',{'ruta': url.ruta }) }}</loc>
                <xhtml:link
                        rel="canonical"
                        hreflang="es"
                        href={{ seccion.urlAlternate }}
                        />
            {% endif %}
            <lastmod>{{ url.fechaActualizado | date('d/m/y') }}</lastmod>
        </url>
    {% endfor %}
</urlset>
